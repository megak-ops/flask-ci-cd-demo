pipeline {
    agent any

    environment {
        PATH = "${HOME}/.local/bin:${env.PATH}"
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'master',
                    credentialsId: 'megak-ops',
                    url: 'https://github.com/megak-ops/flask-ci-cd-demo.git'
            }
        }

        stage('Install Poetry') {
            steps {
                sh '''
                    curl -sSL https://install.python-poetry.org | python3 -
                    poetry --version
                '''
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'poetry install'
            }
        }

        stage('Lint') {
            steps {
                sh 'poetry run flake8 || true'
            }
        }

        stage('Unit Tests') {
            steps {
                sh 'poetry run pytest --junitxml=test-results.xml'
            }
            post {
                always {
                    junit 'test-results.xml'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t flask-ci-demo .'
            }
        }

        stage('Run Container') {
            steps {
                sh '''
                    docker stop flask-app || true
                    docker rm flask-app || true
                    docker run -d -p 5000:5000 --name flask-app flask-ci-demo
                '''
            }
        }
    }
}
