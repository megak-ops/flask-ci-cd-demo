pipeline {
    
    agent any

    parameters {
    choice(
        name: 'ENV',
        choices: ['dev', 'prod'],
        description: 'Choose environment'
    )
}

    environment {
        PATH = "${HOME}/.local/bin:${env.PATH}"
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'master',
                    credentialsId: 'megak-ops',
                    url: 'https://github.com/megak-ops/flask-ci-cd-demo.git'
            }
        }

        stage('Install Poetry') {
            steps {
                sh '''
                    curl -sSL https://install.python-poetry.org | python3 -
                    poetry --version
                '''
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'poetry install'
            }
        }

        stage('Lint') {
            steps {
                sh 'poetry run flake8  true'
            }
        }

        stage('Unit Tests') {
            steps {
                sh 'poetry run pytest --junitxml=test-results.xml'
            }
            post {
                always {
                    junit 'test-results.xml'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t flask-ci-demo .'
            }
        }

       stage('Deploy') {
    steps {
        script {
            if (params.ENV == 'dev') {
                sh '''
                    docker stop flask-app-dev  true
                    docker rm flask-app-dev  true
                    docker run -d --name flask-app-dev -p 5000:5000 $DOCKERHUB_USER/flask-ci-demo
                '''
            } else {
                sh '''
                    docker stop flask-app-prod  true
                    docker rm flask-app-prod || true
                    docker run -d --name flask-app-prod -p 80:5000 $DOCKERHUB_USER/flask-ci-demo
                '''
            }
        }
    }
}
        stage('Push Image to DockerHub') {
    steps {
        withCredentials([usernamePassword(credentialsId: 'dockerhub-creds', passwordVariable: 'DOCKERHUB_PASS', usernameVariable: 'megakh')]) {
            sh '''
                echo "$DOCKERHUB_PASS" | docker login -u "$DOCKERHUB_USER" --password-stdin
                docker tag flask-ci-demo $DOCKERHUB_USER/flask-ci-demo:latest
                docker push $DOCKERHUB_USER/flask-ci-demo:latest
            '''
        }
    }
}

DEV-OPS, [12/6/2025 5:20 PM]
pipeline {
    agent any

    parameters {
        choice(
            name: 'ENV',
            choices: ['dev', 'prod'],
            description: 'Choose environment'
        )
    }

    environment {
        PATH = "${HOME}/.local/bin:${env.PATH}"
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main',
                    credentialsId: 'megak-ops',
                    url: 'https://github.com/megak-ops/flask-ci-cd-demo.git'
            }
        }

        stage('Install Poetry') {
            steps {
                sh '''
                    curl -sSL https://install.python-poetry.org | python3 -
                    export PATH="$HOME/.local/bin:$PATH"
                    poetry --version
                '''
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'poetry install'
            }
        }

        stage('Lint') {
            steps {
                sh 'poetry run flake8 || true'
            }
        }

        stage('Unit Tests') {
            steps {
                sh 'poetry run pytest --junitxml=test-results.xml'
            }
            post {
                always {
                    junit 'test-results.xml'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t flask-ci-demo .'
            }
        }

        stage('Push Image to DockerHub') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub-creds', usernameVariable: 'DOCKERHUB_USER', passwordVariable: 'DOCKERHUB_PASS')]) {
                    sh '''
                        echo "$DOCKERHUB_PASS" | docker login -u "$DOCKERHUB_USER" --password-stdin
                        docker tag flask-ci-demo $DOCKERHUB_USER/flask-ci-demo:latest
                        docker push $DOCKERHUB_USER/flask-ci-demo:latest
                    '''
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    if (params.ENV == 'dev') {
                        sh '''
                            docker stop flask-app-dev || true
                            docker rm flask-app-dev || true
                            docker run -d --name flask-app-dev -p 5000:5000 $DOCKERHUB_USER/flask-ci-demo
                        '''
                    } else {
                        sh '''
                            docker stop flask-app-prod || true
                            docker rm flask-app-prod || true
                            docker run -d --name flask-app-prod -p 80:5000 $DOCKERHUB_USER/flask-ci-demo
                        '''
                    }
                }
            }
        }

    }
}
